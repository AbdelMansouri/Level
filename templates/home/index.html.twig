{% extends 'base.html.twig' %}

{% block title %}Level
{% endblock %}

{% block body %}
	<div class="container-fluid d-flex flex-column align-items-center justify-content-center text-center" id="home-banner">
		<p class="mb-1">Des vêtements qui vous démarqueront</p>
		<h1 class="text-white mb-3">Une collection
			<br><span class="fw-light text-center">unique</span>
		</h1>
		<a href="{{ path('shop') }}" class="btn btn-secondary mt-2">
			Notre boutique</a>
	</div>

	<section id="home-collection">
		<h2 class="text-center my-5">Welcome to
			<span class="fw-light">Level.</span>
		</h2>
		<div class="container">
			<div class="row d-flex justify-content-evenly flex-wrap">

				<div class="d-flex flex-column align-items-center justify-content-end" id="collection-men">
					<span class="h1 text-white mb-0">Collection</span>
					<span class="h1 fw-light text-white">Homme</span>
					<a href="{{ path('shop_collection', { collection: 'h' }) }}" class="mb-4 text-white text-uppercase fw-bold">Je la découvre</a>
				</div>
				<div class="d-flex flex-column align-items-center justify-content-end" id="collection-women">
					<span class="h1 text-white mb-0">Collection</span>
					<span class="h1 fw-light text-white">Femme</span>
					<a href="{{ path('shop_collection', { collection: 'f' }) }}" class="mb-4 text-white text-uppercase fw-bold">Je la découvre</a>
				</div>
			</div>
		</div>
	</section>
	<section id="home-collection">
		<h2 class="text-center my-5">Derniers
			<span class="fw-light">articles.</span>
		</h2>
		<div class="container-fluid">
			<div class="row d-flex justify-content-evenly flex-wrap">

				{% for produit in produits %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3 my-5">
						<div class="card h-100 border-0 shadow-none custom-card w-100">
							<a href="{{ path('product_details', {id: produit.id}) }}">
								<img src="{{ asset('assets/upload/' ~ produit.photo) }}" class="card-img-top rounded-0 mb-3 img-fluid imgF" alt="...">
							</a>
							<h3 class="card-title m-0 h6 text-black">{{ produit.titre }}</h3>
							<div class="card-body d-flex flex-column p-0">
								<small class="text-body-secondary mt-auto">{{ produit.collection == 'h' ? 'Homme' : 'Femme' }}</small>
								<small class="text-body-primary mt-auto">{{ produit.prix }}€</small>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>


{% endblock %}
