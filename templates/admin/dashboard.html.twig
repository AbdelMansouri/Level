{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de Bord
{% endblock %}

{% block main %}
	<div class="row">

		<div class="col-lg-8">
			<div class="card mb-3 rounded-0 py-3">
				<div class="row g-0">
					<div class="col-lg-4 d-flex align-items-center justify-content-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-box-seam" viewbox="0 0 16 16">
							<path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
						</svg>
					</div>
					<div class="col-lg-8">
						<div class="card-body">
							<h2 class="card-title">Commandes</h2>
							<p class="card-text m-2">Chiffre d'affaire :
								{{ chiffreAffaire|number_format(2, '.', '') }}€</p>
							<p class="card-text m-2">Nombres commandes :
								{{ nombreCommandes }}</p>
							<p class="card-text m-2">Panier moyen :
								{{ panierMoyenGlobal|number_format(2, '.', '')  }}€</p>
						</div>
					</div>
				</div>
			</div>
			<div class="card mb-3 rounded-0 py-4">
				<div class="row g-0">
					<div class="col-lg-4 d-flex align-items-center justify-content-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-inboxes" viewbox="0 0 16 16">
							<path d="M4.98 1a.5.5 0 0 0-.39.188L1.54 5H6a.5.5 0 0 1 .5.5 1.5 1.5 0 0 0 3 0A.5.5 0 0 1 10 5h4.46l-3.05-3.812A.5.5 0 0 0 11.02 1H4.98zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562A.5.5 0 0 0 1.884 9h12.234a.5.5 0 0 0 .496-.438L14.933 6zM3.809.563A1.5 1.5 0 0 1 4.981 0h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 10H1.883A1.5 1.5 0 0 1 .394 8.686l-.39-3.124a.5.5 0 0 1 .106-.374L3.81.563zM.125 11.17A.5.5 0 0 1 .5 11H6a.5.5 0 0 1 .5.5 1.5 1.5 0 0 0 3 0 .5.5 0 0 1 .5-.5h5.5a.5.5 0 0 1 .496.562l-.39 3.124A1.5 1.5 0 0 1 14.117 16H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .121-.393zm.941.83.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438l.32-2.562H10.45a2.5 2.5 0 0 1-4.9 0H1.066z"/>
						</svg>
					</div>
					<div class="col-lg-8">
						<div class="card-body">
							<h2 class="card-title">Produits</h2>
							<p class="card-text m-2">Nombre de produit :
								{{ nombreProduits }}</p>
							<p class="card-text m-2">Prix moyen :
								{{ prixMoyen|number_format(2, '.', '') }}€</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="card mb-3 rounded-0">
				<div class="d-flex align-items-center justify-content-center pt-3 mb-3">
					<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-people" viewbox="0 0 16 16">
						<path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z"/>
					</svg>
				</div>
				<div class="card-body">
					<h2 class="card-title">Membres</h2>
					<p class="card-text m-2">Nombre d'utilisateur :
						{{ nombreMembres }}</p>
				</div>
			</div>
		</div>
	</div>
	<p class="h3 text-center text-warning mt-5">Nous travaillons actuellement pour étoffer les statistiques disponibles dans votre Dashboard</p>


{% endblock %}
