{% extends 'base.html.twig' %}

{% block title %}
	Level -
	{{ produit.titre }}
{% endblock %}

{% block body %}
	<div class="container-fluid" id="product">
		<div class="row mb-5 pb-5">
			<div class="col-lg-8 m-0 p-0">
				<div class="card border-0 bg-produit">
					<div class="text-center">
						<img src="{{ asset('assets/upload/' ~ produit.photo) }}" class="img-fluid w-50" style="cursor : crosshair" alt="Photo du produit {{ produit.titre }}">
					</div>
				</div>
			</div>
			<div class="col-lg-4 px-lg-5">
				<div class="card border-0 min-vh">
					<div class="card-body">
						<h1 class="card-text mt-5 h3 text-black text-center">{{ produit.titre }}</h1>
						<p class="fw-bold h4 my-3 text-center">{{ produit.prix }}€</p>
						<p class="card-text text-muted smaller text-center fw-bold">{{ produit.description }}</p>

						<div class="d-flex text-center mt-5 mb-4">
							<div class="col-5">
								<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-box-seam mb-3" viewbox="0 0 16 16">
									<path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
								</svg>
								<p class="text-muted smaller">Retour gratuit</p>
							</div>
							<div class="col-2 d-flex align-items-center justify-content-center">
								<div class="vertical-bar"></div>
							</div>
							<div class="col-5">
								<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-recycle mb-3" viewbox="0 0 16 16">
									<path d="M9.302 1.256a1.5 1.5 0 0 0-2.604 0l-1.704 2.98a.5.5 0 0 0 .869.497l1.703-2.981a.5.5 0 0 1 .868 0l2.54 4.444-1.256-.337a.5.5 0 1 0-.26.966l2.415.647a.5.5 0 0 0 .613-.353l.647-2.415a.5.5 0 1 0-.966-.259l-.333 1.242-2.532-4.431zM2.973 7.773l-1.255.337a.5.5 0 1 1-.26-.966l2.416-.647a.5.5 0 0 1 .612.353l.647 2.415a.5.5 0 0 1-.966.259l-.333-1.242-2.545 4.454a.5.5 0 0 0 .434.748H5a.5.5 0 0 1 0 1H1.723A1.5 1.5 0 0 1 .421 12.24l2.552-4.467zm10.89 1.463a.5.5 0 1 0-.868.496l1.716 3.004a.5.5 0 0 1-.434.748h-5.57l.647-.646a.5.5 0 1 0-.708-.707l-1.5 1.5a.498.498 0 0 0 0 .707l1.5 1.5a.5.5 0 1 0 .708-.707l-.647-.647h5.57a1.5 1.5 0 0 0 1.302-2.244l-1.716-3.004z"/>
								</svg>
								<p class="text-muted smaller">Article écoresponsable</p>
							</div>
						</div>
						{% if message is defined and message is not empty %}
							<div class="text-danger">{{ message }}</div>
						{% endif %}

						<div class="mb-3">
							<form action="{{ path('cart_add', {'id': produit.id}) }}" method="POST">
								<div class="form-group">
									<label for="quantite" class="mt-3">Quantité :</label>
									<input type="number" id="quantite" name="quantite" class="form-control w-50 mb-3" value="1" min="1">
								</div>
								<button type="submit" class="btn btn-primary w-100 py-4">Ajouter au panier</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
